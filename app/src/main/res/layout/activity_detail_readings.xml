<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
tools:context="media.extreme.com.brothercorpappmovil.DetailReadings">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="CODIGO"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="@font/muliextrabold"/>

    <EditText
        android:id="@+id/textCodigoUno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:enabled="false"

        android:hint="Ingrese Codigo"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:fontFamily="@font/muliextralight"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="PERIODO"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="@font/muliextrabold"/>

    <EditText
        android:id="@+id/textPeriodoUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese Periodo"
        android:inputType="textPersonName"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:fontFamily="@font/muliextralight"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="CLIENTE"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="@font/muliextrabold"/>

    <EditText
        android:id="@+id/textClienteUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCodigoUno"
        android:layout_alignStart="@+id/textCodigoUno"
        android:layout_below="@+id/textCodigoUno"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese Cliente"
        android:inputType="textPersonName"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:fontFamily="@font/muliextralight"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="LECTURA INICIAL"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="@font/muliextrabold"/>

    <EditText
        android:id="@+id/textLecturaInicialUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese LecturaInicial"
        android:inputType="number"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:fontFamily="@font/muliextralight"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="LECTURA FINAL"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="@font/muliextrabold"/>

    <EditText
        android:id="@+id/textLecturaFinalUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Ingrese Lectura Final"
        android:inputType="number"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:fontFamily="@font/muliextralight"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="DIFERENCIA"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="@font/muliextrabold"/>

    <EditText
        android:id="@+id/textDiferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:focusable="false"
        android:fontFamily="@font/muliextralight"
        />

    <Button
        android:id="@+id/buttonUno"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="21dp"
        android:onClick="altaLecturaFinal"
        android:text="Ingresar"
        android:fontFamily="@font/muliextrabold"/>



</LinearLayout>
